<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style untuk TextInputLayout -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="hintTextColor">#45B6FE</item>
        <item name="android:textColorHint">#45B6FE</item>
        <item name="hintTextAppearance">@style/CustomHintAppearance</item>
    </style>

    <!-- Style untuk hint text (warna saat naik ke atas) -->
    <style name="CustomHintAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">#45B6FE</item>
    </style>

    <style name="PersonelInfoText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- Popup menu dengan background dan warna teks custom -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:itemBackground">@color/deep_blue</item>
        <item name="android:textColor">@color/primary_cyan</item>
    </style>

    <!-- Bentuk kotak untuk FAB -->
    <style name="ShapeAppearance.App.SquareFab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item> <!-- tanpa lengkungan -->
    </style>

    <!-- (opsional) preset ukuran kecil buat FAB -->
    <style name="App.SmallFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabCustomSize">36dp</item>
        <item name="maxImageSize">18dp</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SquareFab</item>
    </style>
</resources>
